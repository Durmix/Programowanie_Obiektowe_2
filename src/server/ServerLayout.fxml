<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="470.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerController">
    <children>
        <ListView fx:id="userFiles" layoutX="14.0" layoutY="16.0" prefHeight="368.0" prefWidth="228.0" />
        <MenuButton fx:id="discSwitchButton" layoutX="301.0" layoutY="273.0" mnemonicParsing="false" text="Choose disc" textFill="#1480b1">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#pickDiscOne" text="Disc 1" />
                <MenuItem mnemonicParsing="false" onAction="#pickDiscTwo" text="Disc 2" />
                <MenuItem mnemonicParsing="false" onAction="#pickDiscThree" text="Disc 3" />
                <MenuItem mnemonicParsing="false" onAction="#pickDiscFour" text="Disc 4" />
                <MenuItem mnemonicParsing="false" onAction="#pickDiscFive" text="Disc 5" />
            </items>
        </MenuButton>
        <Button fx:id="closeButton" onAction="#closeButtonAction" layoutX="301.0" layoutY="300.0" mnemonicParsing="false" text="Disconnect" textFill="#1480b1"/>
        <ListView fx:id="activeUsers" layoutX="256.0" layoutY="62.0" onMouseClicked="#displayFilesFromDisc" prefHeight="200.0" prefWidth="200.0" />
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="301.0" layoutY="35.0" prefHeight="17.0" prefWidth="110.0" text="Active users" />
    </children>
</AnchorPane>
